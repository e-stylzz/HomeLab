global:
  scrape_interval: 30s
  evaluation_interval: 30s

alerting:
  alertmanagers:
  - static_configs:
    - targets:
      - 192.168.30.65:9093
    scheme: http
    timeout: 10s

rule_files:
  - /etc/alertmanager/rules/*

scrape_configs:
  - job_name: 'Random Linux Systems'
    static_configs:
      - targets: ['192.168.30.25:9100', '192.168.30.90:9100']

  - job_name: 'Random Windows Systems'
    static_configs:
      - targets: ['192.168.30.60:9182',]
  
  - job_name: linux_systems
    file_sd_configs:
    - files:
      - linux_systems/targets.json
    params:
      module:
        - node-exporter
    relabel_configs:
      - source_labels: [__param_target]
        target_label: instance


  - job_name: windows_systems
    file_sd_configs:
    - files:
      - windows_systems/targets.json
    params:
      module:
        - node-exporter
    relabel_configs:
      - source_labels: [__param_target]
        target_label: instance



  - job_name: node_exporter
    file_sd_configs:
    - files:
      - node_exporter/targets.json
    params:
      module:
        - node-exporter
    relabel_configs:
      - source_labels: [__param_target]
        target_label: instance

  - job_name: vmware
    scrape_interval: 2m
    scrape_timeout: 2m
    metrics_path: /metrics
    scheme: http
    file_sd_configs:
    - files:
      - vmware_exporter/targets.json
    params:
      section:
        - default
      module:
        - vmware
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: 192.168.30.65:9272